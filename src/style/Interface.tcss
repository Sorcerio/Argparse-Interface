Screen {
    layout: vertical;
    overflow-y: auto;
}

.hcontainer {
    width: 100%;
    height: auto;
}

.hcontainer > Label {
    height: 3;
    content-align: center middle;
    width: auto;
}

.hcontainer > Input {
    width: auto;
    min-width: 25%;
    height: 3;
    margin: 1 1;
}

.itemlist {
    height: auto;
}

.itemlist .item {
    width: 100%;
    height: 3;
}

.itemlist .item Input {
    width: 100%;
}

.itemlist .item Button {
    width: 4;
    height: 4;
}
